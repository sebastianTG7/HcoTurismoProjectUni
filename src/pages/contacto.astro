<style>
/* Hero Section */
.hero-contacto {
	background: linear-gradient(135deg, #0c4a6e 0%, #0e7490 50%, #06b6d4 100%);
	min-height: 50vh;
	display: flex;
	align-items: center;
	justify-content: center;
	position: relative;
	overflow: hidden;
}

.hero-contacto::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-image: 
		radial-gradient(circle, rgba(220, 243, 254, 0.1) 1px, transparent 1px);
	background-size: 40px 40px;
	animation: drift 20s linear infinite;
}

@keyframes drift {
	0% { background-position: 0 0; }
	100% { background-position: 40px 40px; }
}

.hero-content {
	text-align: center;
	z-index: 10;
	position: relative;
	padding: 2rem;
}

.hero-content h1 {
	font-size: 4rem;
	color: #ffffff;
	font-weight: 700;
	margin-bottom: 1rem;
	text-shadow: 
		0 0 30px rgba(6, 182, 212, 0.6),
		3px 3px 10px rgba(0, 0, 0, 0.8);
	letter-spacing: 2px;
}

.hero-content p {
	font-size: 1.5rem;
	color: #dcf3fe;
	text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.7);
}

/* Contact Section */
.contact-section {
	background: linear-gradient(180deg, #f0f9ff 0%, #e0f2fe 100%);
	padding: 5rem 2rem;
}

.container {
	max-width: 1200px;
	margin: 0 auto;
}

.contact-grid {
	display: grid;
	grid-template-columns: 1fr 1fr;
	gap: 4rem;
	align-items: start;
}

.contact-info h2,
.contact-form-container h2 {
	font-size: 2.5rem;
	color: #0c4a6e;
	margin-bottom: 1.5rem;
	font-weight: 700;
}

.intro-text {
	color: #475569;
	line-height: 1.8;
	margin-bottom: 2.5rem;
	font-size: 1.1rem;
}

.info-items {
	display: flex;
	flex-direction: column;
	gap: 2rem;
}

.info-item {
	display: flex;
	gap: 1.5rem;
	align-items: flex-start;
	padding: 1.5rem;
	background: #ffffff;
	border-radius: 12px;
	box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
	transition: all 0.3s ease;
	border: 2px solid transparent;
}

.info-item:hover {
	transform: translateX(10px);
	box-shadow: 0 6px 20px rgba(6, 182, 212, 0.2);
	border-color: #06b6d4;
}

.info-item .icon {
	font-size: 2.5rem;
	flex-shrink: 0;
}

.info-item .content h3 {
	font-size: 1.3rem;
	color: #0c4a6e;
	margin-bottom: 0.5rem;
	font-weight: 700;
}

.info-item .content p {
	color: #64748b;
	line-height: 1.6;
	font-size: 1rem;
}

/* Contact Form */
.contact-form-container {
	background: #ffffff;
	padding: 3rem;
	border-radius: 16px;
	box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
	border: 2px solid #e0f2fe;
}

.contact-form {
	display: flex;
	flex-direction: column;
	gap: 1.5rem;
}

.form-group {
	display: flex;
	flex-direction: column;
	gap: 0.5rem;
}

.form-group label {
	color: #0c4a6e;
	font-weight: 600;
	font-size: 1rem;
}

.form-group input,
.form-group select,
.form-group textarea {
	padding: 1rem;
	border: 2px solid #e0f2fe;
	border-radius: 8px;
	font-size: 1rem;
	font-family: inherit;
	transition: all 0.3s ease;
	background: #f0f9ff;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
	outline: none;
	border-color: #06b6d4;
	background: #ffffff;
	box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1);
}

.form-group textarea {
	resize: vertical;
	min-height: 120px;
}

.submit-btn {
	padding: 1.2rem 2.5rem;
	background: linear-gradient(135deg, #0e7490, #06b6d4);
	color: #ffffff;
	border: none;
	border-radius: 8px;
	font-size: 1.1rem;
	font-weight: 700;
	text-transform: uppercase;
	letter-spacing: 1px;
	cursor: pointer;
	transition: all 0.3s ease;
	box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
	position: relative;
	overflow: hidden;
}

.submit-btn::before {
	content: '';
	position: absolute;
	top: 50%;
	left: 50%;
	width: 0;
	height: 0;
	background: rgba(255, 255, 255, 0.2);
	border-radius: 50%;
	transform: translate(-50%, -50%);
	transition: width 0.6s, height 0.6s;
}

.submit-btn:hover::before {
	width: 300px;
	height: 300px;
}

.submit-btn:hover {
	background: linear-gradient(135deg, #06b6d4, #22d3ee);
	transform: translateY(-2px);
	box-shadow: 0 8px 25px rgba(6, 182, 212, 0.4);
}

.submit-btn span {
	position: relative;
	z-index: 1;
}

/* Map Section */
.map-section {
	background: #ffffff;
	padding: 5rem 2rem;
}

.map-section h2 {
	text-align: center;
	font-size: 3rem;
	color: #0c4a6e;
	margin-bottom: 3rem;
	font-weight: 700;
}

.map-placeholder {
	background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
	border-radius: 16px;
	height: 400px;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	gap: 1rem;
	border: 3px solid #06b6d4;
}

.map-icon {
	font-size: 6rem;
}

.map-placeholder p {
	font-size: 1.3rem;
	color: #0c4a6e;
	font-weight: 600;
}

/* CTA Section */
.cta-section {
	background: linear-gradient(135deg, #0c4a6e 0%, #0e7490 100%);
	padding: 5rem 2rem;
	text-align: center;
	color: #ffffff;
}

.cta-section h2 {
	font-size: 2.8rem;
	margin-bottom: 1rem;
	text-shadow: 0 0 25px rgba(6, 182, 212, 0.6);
	font-weight: 700;
}

.cta-section p {
	font-size: 1.3rem;
	margin-bottom: 2.5rem;
	color: #dcf3fe;
}

.btn-back {
	display: inline-block;
	padding: 1.2rem 3rem;
	background: rgba(255, 255, 255, 0.15);
	color: #ffffff;
	text-decoration: none;
	font-size: 1.1rem;
	font-weight: 600;
	border: 2px solid #ffffff;
	border-radius: 50px;
	transition: all 0.3s ease;
	backdrop-filter: blur(10px);
	text-transform: uppercase;
	letter-spacing: 1.5px;
}

.btn-back:hover {
	background: #ffffff;
	color: #0c4a6e;
	transform: translateY(-3px) scale(1.05);
	box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
}

/* Responsive */
@media (max-width: 768px) {
	.hero-content h1 {
		font-size: 2.8rem;
	}

	.hero-content p {
		font-size: 1.2rem;
	}

	.contact-grid {
		grid-template-columns: 1fr;
		gap: 3rem;
	}

	.contact-form-container {
		padding: 2rem;
	}

	.map-placeholder {
		height: 300px;
	}

	.map-icon {
		font-size: 4rem;
	}
}

@media (max-width: 480px) {
	.hero-content h1 {
		font-size: 2.2rem;
	}

	.contact-info h2,
	.contact-form-container h2 {
		font-size: 2rem;
	}

	.contact-form-container {
		padding: 1.5rem;
	}
}
</style>

