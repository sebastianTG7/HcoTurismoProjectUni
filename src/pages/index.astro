	overflow: hidden;
}

.map-background::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 200px;
	background: linear-gradient(180deg, 
		rgba(220, 243, 254, 0.8) 0%,
		rgba(220, 243, 254, 0.4) 30%,
		transparent 100%
	);
	z-index: 2;
	pointer-events: none;
}

.map-image {
	width: 100%;
	height: 100%;
	object-fit: cover;
	object-position: center;
	min-height: 140vh;
}

.points-container {
	position: relative;
	width: 100%;
	height: 100%;
	z-index: 2;
	display: flex;
	flex-direction: column;
	justify-content: space-evenly;
	align-items: center;
	padding: 5vh 0;
}

/* Puntos de viaje */
.journey-point {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 1.2rem;
	margin: 8vh 0;
	opacity: 0;
	transform: translateY(50px) scale(0.9);
	transition: all 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
	text-decoration: none;
	cursor: pointer;
}

.journey-point.visible {
	opacity: 1;
	transform: translateY(0) scale(1);
}

/* Alternar posici√≥n izquierda-derecha */
