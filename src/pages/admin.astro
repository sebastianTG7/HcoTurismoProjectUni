<script>
let currentSection = 'all';
let editingCommentId = null;
let deletingCommentId = null;
let allComments = [];

// Mostrar modal de √©xito
function showSuccess(message) {
  const modal = document.getElementById('success-modal');
  const messageEl = document.getElementById('success-message');
  messageEl.textContent = message;
  modal.classList.add('active');
  setTimeout(() => {
    modal.classList.remove('active');
  }, 1500);
}

// Formatear fecha
function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleString('es-PE', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}

// Escapar HTML
function escapeHtml(text) {
  const div = document.createElement('div');
  div.textContent = text;
  return div.innerHTML;
}

// Nombre de secci√≥n capitalizado
function getSectionName(section) {
  const names = {
    'historia': 'Historia',
    'naturaleza': 'Naturaleza',
    'turismo': 'Turismo',
    'cultura': 'Cultura',
    'gastronomia': 'Gastronom√≠a'
  };
  return names[section] || section;
}

// Cargar todos los comentarios
async function loadAllComments() {
  try {
    const sections = ['historia', 'naturaleza', 'turismo', 'cultura', 'gastronomia'];
    const promises = sections.map(section => 
      fetch(`/api/admin/comments?section=${section}`).then(r => r.json())
    );
    
    const results = await Promise.all(promises);
    allComments = results.flatMap((data, index) => 
      (data.comments || []).map(comment => ({
        ...comment,
        section: sections[index]
      }))
    );
    
    updateStats();
    renderComments();
  } catch (error) {
    console.error('Error al cargar comentarios:', error);
    document.getElementById('admin-comments-list').innerHTML = 
      '<div class="no-comments">Error al cargar comentarios</div>';
  }
}

// Actualizar estad√≠sticas
function updateStats() {
  const total = allComments.length;
  const reported = allComments.filter(c => c.reports && c.reports.length > 0).length;
  
  document.getElementById('total-comments').textContent = total;
  document.getElementById('reported-comments').textContent = reported;
}

// Renderizar comentarios
function renderComments() {
  let filtered;
  
  if (currentSection === 'all') {
    filtered = allComments;
  } else if (currentSection === 'reported') {
    // Solo comentarios reportados
    filtered = allComments.filter(c => c.reports && c.reports.length > 0);
  } else {
    // Filtrar por secci√≥n espec√≠fica
    filtered = allComments.filter(c => c.section === currentSection);
  }
  
  const container = document.getElementById('admin-comments-list');
  
  if (filtered.length === 0) {
    container.innerHTML = '<div class="no-comments">No hay comentarios en esta secci√≥n</div>';
    return;
  }
  
  container.innerHTML = filtered.map(comment => `
    <div class="admin-comment-item ${comment.reports && comment.reports.length > 0 ? 'reported' : ''}">
      <span class="comment-section-badge">${getSectionName(comment.section)}</span>
      
      ${comment.reports && comment.reports.length > 0 ? `
        <span class="report-badge">üö© ${comment.reports.length} Reporte${comment.reports.length > 1 ? 's' : ''}</span>
      ` : ''}
      
      <div class="comment-meta">
        <div class="comment-user-info">
          <div class="user-avatar">${comment.user.nombre.charAt(0).toUpperCase()}</div>
          <div class="user-details">
            <h4>${escapeHtml(comment.user.nombre)}</h4>
            <span>${formatDate(comment.createdAt)}</span>
          </div>
        </div>
        
        <div class="comment-actions">
          <button class="btn-admin-action" onclick="editComment(${comment.id}, '${escapeHtml(comment.content).replace(/'/g, "\\'")}')">
            ‚úèÔ∏è Editar
          </button>
          <button class="btn-admin-action delete" onclick="deleteComment(${comment.id})">
            üóëÔ∏è Eliminar
          </button>
        </div>
      </div>
      
      <div class="comment-content">${escapeHtml(comment.content)}</div>
      
      ${comment.reports && comment.reports.length > 0 ? `
        <div class="reports-list">
          <h5>üìã Reportes (${comment.reports.length}):</h5>
          ${comment.reports.map(report => `
            <div class="report-item">
              <div class="report-info">
                <strong>Por: ${escapeHtml(report.reportedByUser)}</strong>
                <p>${escapeHtml(report.reason)}</p>
              </div>
              <button class="btn-remove-report" onclick="removeReport(${report.id})" title="Quitar reporte">
                ‚úï
              </button>
            </div>
          `).join('')}
        </div>
      ` : ''}
    </div>
  `).join('');
}

// Cambiar secci√≥n
document.querySelectorAll('.tab-btn').forEach(btn => {
  btn.addEventListener('click', () => {
    document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
    btn.classList.add('active');
    currentSection = btn.dataset.section;
    renderComments();
  });
});

// Editar comentario
window.editComment = (id, content) => {
  editingCommentId = id;
  const modal = document.getElementById('edit-modal');
  const input = document.getElementById('edit-comment-input');
  input.value = content;
  modal.classList.add('active');
};

document.getElementById('cancel-edit')?.addEventListener('click', () => {
  document.getElementById('edit-modal').classList.remove('active');
  editingCommentId = null;
});

document.getElementById('save-edit')?.addEventListener('click', async () => {
  const content = document.getElementById('edit-comment-input').value.trim();
  
  if (!content) {
    showSuccess('El comentario no puede estar vac√≠o');
    return;
  }

  try {
    const response = await fetch('/api/comments/update', {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ commentId: editingCommentId, content })
    });

    if (response.ok) {
      document.getElementById('edit-modal').classList.remove('active');
      await loadAllComments();
      showSuccess('Comentario actualizado');
    } else {
      const data = await response.json();
      showSuccess(data.message || 'Error al actualizar comentario');
    }
  } catch (error) {
    console.error('Error:', error);
    showSuccess('Error al actualizar comentario');
  }
});

// Eliminar comentario
window.deleteComment = (id) => {
  deletingCommentId = id;
  document.getElementById('delete-modal').classList.add('active');
};

document.getElementById('cancel-delete')?.addEventListener('click', () => {
  document.getElementById('delete-modal').classList.remove('active');
  deletingCommentId = null;
});

document.getElementById('confirm-delete')?.addEventListener('click', async () => {
  try {
    const response = await fetch('/api/comments/delete', {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ commentId: deletingCommentId })
    });

    if (response.ok) {
      document.getElementById('delete-modal').classList.remove('active');
      await loadAllComments();
      showSuccess('Comentario eliminado');
    } else {
      const data = await response.json();
      showSuccess(data.message || 'Error al eliminar comentario');
    }
  } catch (error) {
    console.error('Error:', error);
    showSuccess('Error al eliminar comentario');
  }
});

// Quitar reporte
window.removeReport = async (reportId) => {
  try {
    const response = await fetch('/api/admin/remove-report', {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ reportId })
    });

    if (response.ok) {
      await loadAllComments();
      showSuccess('Reporte eliminado');
    } else {
      const data = await response.json();
      showSuccess(data.message || 'Error al eliminar reporte');
    }
  } catch (error) {
    console.error('Error:', error);
    showSuccess('Error al eliminar reporte');
  }
};

// Cargar comentarios al iniciar
loadAllComments();
</script>
