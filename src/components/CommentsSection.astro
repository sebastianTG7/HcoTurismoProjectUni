  color: #064e3b;
  margin-bottom: 2rem;
  display: flex;
  align-items: center;
  gap: 1rem;
}

.comments-count {
  background: linear-gradient(135deg, #10b981, #06b6d4);
  color: white;
  padding: 0.3rem 1rem;
  border-radius: 20px;
  font-size: 1.2rem;
}

